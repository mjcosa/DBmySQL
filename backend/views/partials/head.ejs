<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CLINIC | <%=title%></title>

  <style>
   @import url('https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700&display=swap');
  * {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

  }

   body{
    max-width: 1200px;
    margin: 20px auto;
    padding: 0 20px;
    font-family: 'Noto Serif', serif;
    background-color: #f4f4f4;
  }
  p, h1, h2, h3, a, ul{
    margin: 0;
    padding: 0;
    text-decoration: none;
    color: #222;
  }

  /* nav & footer styles */
  nav{
    display: flex;
    justify-content: space-between;
    margin-bottom: 60px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ddd;
    text-transform: uppercase;
    
  }
  nav ul{
  
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .activelink {
    color: #777;
    padding: 10px 20px 10px 20px;
  }

  .activelink:hover{
    color: black;
    background-color: #aca3a32f;
    border-radius: 8px;
  }

  nav li{

    list-style-type: none;
    font-weight: 450;
    font-size: 15px;
    color: #777;
  }

  nav h1{
    font-size: 3em;
    margin-bottom: 10px;
  }
  nav p{
    color: #777;
    font-weight: 300;
  }

  footer{
    color: #777;
    text-align: center;
    margin: 80px auto 20px;
  }
  h1{
    margin-bottom: 40px;
  }
  h3{
    text-transform: capitalize;
    margin-bottom: 8px;
  }
  .content{
    margin-left: 20px;
  }

  /* index styles */
  .about {
    align-content: center;
  }

  .appointmentDets {
    justify-content: space-around;
    max-width: 80%;
    align-content: center;
    
  }

  .apt {
    margin-bottom: 50px;
    padding-left: 30px;
    padding-top: 20px;
    padding-bottom: 50px;
    background-color: #dcd3d3;
    border-left: 4px solid #a08b8b;
    border-radius: 18px;
    background-color: #dcd3d3;
  }
  
  .apt p {
    font-size: 21px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .apt h2 {
    font-size: 30px;
    padding-bottom: 20px;
  }

  .blogs{
    max-width: 40%;
    margin-bottom: 50px;
    padding-left: 30px;
    padding-top: 20px;
    padding-bottom: 50px;
    background-color: #dcd3d3;
    border-left: 4px solid #a08b8b;
    border-radius: 18px;
  }


  .blogs:hover {
    font-size: 25px;
    background-color: #bab1b1;
  }

  .blogs h3{
    font-size: 20px;
    margin-bottom: 15px;
  }

  .blogs h2{
    font-size: 20px;
    margin-bottom: 15px;
  }

  .blogsContent h2{
    font-size: 30px;
  }

  /* About styles */
  .about {

    align-content: center;
  }
  .about p {

    border-radius: 20px;
    margin-left: 10px;
    margin-right: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
    padding-right: 10px;
    font-size: 20px;

  }

  #aboutTitle{
    margin-top: 10vh;
    margin-bottom: 3vh;
    text-align: center;
    font-size: 35px;
  }
  
  /* create styles */
  .create-blog h1 {
    margin-top: 10vh;
    margin-bottom: 3vh;
    text-align: center;
  }
  .create-blog form{
    max-width: 500px;
    margin: 0 auto;
  }
  .create-blog input,
  .create-blog textarea{
    display: block;
    width: 100%;
    height: 30px;
    margin: 10px 0;
    padding: 8px;
  }
  .create-blog label{
    display: block;
    margin-top: 24px;
    font-size: 20px;
  }
  #body{
    height: 120px;
  }
  .create-blog button{
    margin-top: 20px;
    background: rgb(107, 57, 57);
    color: white;
    padding: 10px;
    border-radius: 5px;
    font-size: 1.2em;
    cursor: pointer;
  }

   /* // MODALS */
  
   .edit, .delete {
            display: inline-block;
            padding: 10px 40px;
            font-size: 1.1rem;
            margin-top: 35px;
            text-decoration: none;
            border-radius: 5px;
            background-color: #7d6e6e;
            color: #fff;
            margin-right: 10px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .edit:hover {
            background-color: #7f7878;
        }

        .delete {
            background-color: #b75656;
        }

        .delete:hover {
            background-color: #e60000;
        }
        
    .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            max-width: 500px;
            width: 90%;
            text-align: center;
        }

        .modal button {
            padding: 12px 25px;
            border: none;
            background-color: #994141;
            color: white;
            font-size: 1.1rem;
            border-radius: 5px;
            cursor: pointer;
        }

        .modal button.cancel {
            background-color: #b0aaaa;
        }

        .modal button.confirm {
            background-color: #994141;
        }

        .content{
      margin-left: 20px;
    }

        /* index styles */
    .content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding: 20px 20px;
        margin: 0 20px;
    }

    .content > section {
        flex: 1;
        margin: 10px;
        min-width: 300px;
        max-width: 65%;
        box-sizing: border-box;
        background-color: var(--color-white-shade);
    }

    .content-card {
        background-color: var(--color-black);
        color: var(--color-white);
        cursor: pointer;
        padding: 45px;
        margin-top: 30px;
        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* Search Form */
.search-form {
  margin-bottom: 30px;
}

.search-input {
  padding: 10px;
  width: 300px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.search-button {
  padding: 10px;
  background-color: #7d6e6e;
  color: white;
  border-radius: 5px;
  border: none;
  cursor: pointer;
  font-size: 16px;
}

.search-button:hover {
  background-color: #6b5b5b;
}

/* Summary */
.summary {
  margin-bottom: 20px;
}

/* Patients Table */
.patients-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 30px;
  font-family: 'Noto Serif', serif;
  font-size: 16px;
  background-color: #f4f4f4;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.patients-table thead tr {
  background-color: #ccc;
  color: #222;
  text-align: left;
  border-bottom: 3px solid #a08b8b;
}

.patients-table thead th {
  position: relative;
  padding-right: 25px; /* Space for the arrow on the right */
}

.patients-table thead th .sort-arrow {
  position: absolute;
  right: 10px;  /* distance from right edge */
  top: 50%;
  transform: translateY(-50%);
  font-size: 0.8em;
  pointer-events: none; /* arrow does not interfere with clicks */
  user-select: none;
  color: #555;
  transition: color 0.3s ease;
}

.patients-table thead th:hover .sort-arrow {
  color: black;
}

.patients-table thead th:hover {
  background-color: #a08b8b;  /* A warm, muted brown */
  color: white;               /* Contrast text color */
  cursor: pointer;            /* Show pointer on hover */
  transition: background-color 0.3s ease, color 0.3s ease;
}

.patients-table th,
.patients-table td {
  padding: 10px;
}

.patients-table tbody tr {
  border-bottom: 1px solid #ddd;
}

.patients-table tbody tr:hover {
  background-color: #eceaea;
}

/* Action buttons */
.edit,
.delete {
  text-decoration: none;
  padding: 5px 15px;
  border-radius: 5px;
  font-weight: 600;
  margin-right: 5px;
  color: white;
  cursor: pointer;
  display: inline-block;
  font-size: 14px;
}

.edit {
  background-color: #7d6e6e;
}

.edit:hover {
  background-color: #6b5b5b;
}

.delete {
  background-color: #b75656;
}

.delete:hover {
  background-color: #e60000;
}

/* Pagination */
.pagination {
  text-align: center;
  margin-top: 40px;
}

.page-link {
  margin: 0 10px;
  text-decoration: none;
  padding: 10px;
  background-color: #a89c9c;
  color: white;
  border-radius: 5px;
  font-weight: 600;
}

.page-link:hover {
  background-color: #8c7e7e;
}

.back-link {
  display: inline-block;
  margin-bottom: 1rem;
  color: #0077cc;
  text-decoration: none;
}
.back-link:hover {
  text-decoration: underline;
}

.clickable-row {
  cursor: pointer;
}

.clickable-row:hover {
  background-color: #f0f0f0;
}
.detailsBox {
  background-color: white;
  padding: 1.5rem;
  border-radius: 8px;
  margin-top: 1rem;
  border: 1px solid #ddd;
}

.detailsBox p {
  margin: 0.5rem 0;
  font-size: 1rem;
}

.action-links {
  margin-top: 1.5rem;
}

.action-links a {
  margin-right: 1rem;
}

/* Filter Form Container */
.filter-form {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 30px;
  align-items: flex-end;
  background-color: #dcd3d3;
  padding: 20px;
  border-left: 4px solid #a08b8b;
  border-radius: 10px;
}

/* Each Filter Group */
.filter-group {
  display: flex;
  flex-direction: column;
  font-weight: 600;
  color: #333;
}

/* Label styling */
.filter-group label {
  margin-bottom: 6px;
  font-size: 1rem;
  color: #222;
}

/* Date Inputs */
.filter-group input[type="date"] {
  padding: 8px 12px;
  font-size: 16px;
  border: 1px solid #bbb;
  border-radius: 5px;
  background-color: white;
  color: #333;
  width: 180px;
  max-width: 100%;
  transition: border-color 0.3s ease;
}

.filter-group input[type="date"]:focus {
  border-color: #7d6e6e;
  outline: none;
}

/* Submit Button (reuses .search-button styles) */
.search-button,
.clear-button {
  padding: 10px 16px;
  background-color: #7d6e6e;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.search-button:hover,
.clear-button:hover {
  background-color: #6b5b5b;
}

.filter-form {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: flex-end;
}

.filter-group {
  display: flex;
  flex-direction: column;
}

.highlight {
  background-color: #d0ebff;
}

  </style>
</head>